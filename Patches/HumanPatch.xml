<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName = "Human"]/comps</xpath>
        <success>Always</success>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName = "Human"]</xpath>
          <value>
            <comps />
          </value>
        </nomatch>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "Human"]/comps</xpath>
        <value>
          <li Class = "FacialStuff.CompProperties_BodyAnimator">
            <bipedWithHands>true</bipedWithHands>
            <handType>Human</handType>
            <drawers>
              <li Class ="FacialStuff.HumanBipedDrawer"/>
            </drawers>
          </li>
          <li Class = "FacialStuff.CompProperties_Face">
            <needsBlankHumanHead>true</needsBlankHumanHead>
            <hasMouth>true</hasMouth>
            <hasBeard>true</hasBeard>
            <hasWrinkles>true</hasWrinkles>
            <hasEyes>true</hasEyes>
            <canRotateHead>true</canRotateHead>
            <drawers>
              <li Class ="FacialStuff.HumanHeadDrawer"/>
              <!--  <li Class ="FacialStuff.SecondHeadDrawer"/>-->
            </drawers>
          </li>
        </value>
      </li>
    </operations>
  </Operation>

  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName = "Boomalope"]/comps</xpath>
        <success>Always</success>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName = "Boomalope"]</xpath>
          <value>
            <comps />
          </value>
        </nomatch>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "Boomalope"]/comps</xpath>
        <value>
          <li Class = "FacialStuff.CompProperties_BodyAnimator">
            <quadruped>true</quadruped>
            <handType>Human</handType>
            <drawers>
              <li Class ="FacialStuff.QuadrupedDrawer"/>
            </drawers>
            <bodyAnimType>BodyAnimDef_Boomalope</bodyAnimType>
          <defaultCycleWalk>Quadruped_Walk</defaultCycleWalk>
          </li>
      </value>
      </li>
    </operations>
  </Operation>
 
   <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName = "Husky"]/comps</xpath>
        <success>Always</success>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName = "Husky"]</xpath>
          <value>
            <comps />
          </value>
        </nomatch>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "Husky"]/comps</xpath>
        <value>
          <li Class = "FacialStuff.CompProperties_BodyAnimator">
            <quadruped>true</quadruped>
            <handType>Human</handType>
            <drawers>
              <li Class ="FacialStuff.QuadrupedDrawer"/>
            </drawers>
            <bodyAnimType>BodyAnimDef_Husky</bodyAnimType>
            <defaultCycleWalk>Quadruped_Walk</defaultCycleWalk>
          </li>
      </value>
      </li>
    </operations>
  </Operation>
</Patch>